@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevOps Shack NotesApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Segoe UI", sans-serif;
        }

        .dark-mode {
            background-color: #121212 !important;
            color: #ffffff;
        }

        .navbar {
            background-color: #1c1b29;
            padding: 0.75rem 1.5rem;
        }

        .navbar-title {
            margin: auto;
            font-size: 1.6rem;
            font-weight: 600;
            color: #fff;
        }

        .sidebar {
            background-color: #1e1d2e;
            color: #fff;
            padding: 1.25rem;
            width: 240px;
        }

        .sidebar h6 {
            margin-bottom: 0.5rem;
            font-size: 0.85rem;
            font-weight: bold;
        }

        .sidebar .btn,
        .sidebar .nav-link {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .sidebar .btn,
        .btn-outline-light {
            background-color: #2d2d3d;
            border: 1px solid #444;
            color: #ffffff;
        }

        .sidebar .btn:hover {
            background-color: #00ff7f;
            color: #000;
            border: none;
        }

        .main-content {
            padding: 2rem;
            flex-grow: 1;
            background-color: #f6f6f9;
        }

        .dark-mode .main-content {
            background-color: #1f1f2f;
        }

        .note-card {
            background-color: #ffffff;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .dark-mode .note-card {
            background-color: #2a2a3b;
            color: #fff;
        }

        .note-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .footer {
            text-align: center;
            padding: 0.75rem;
            background-color: #1c1b29;
            color: #ccc;
            font-size: 0.85rem;
        }

        .form-switch {
            position: absolute;
            top: 18px;
            right: 24px;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.35em 0.6em;
        }

        /* ðŸ”¥ Neon Hover Effects for buttons */
        .btn-view:hover,
        .btn-edit:hover,
        .btn-delete:hover {
            background-color: #00ff7f !important;
            color: #000 !important;
            border-color: #00ff7f !important;
        }

        .btn-view {
            color: #0d6efd;
            border: 1px solid #0d6efd;
        }

        .btn-edit {
            color: #ffc107;
            border: 1px solid #ffc107;
        }

        .btn-delete {
            color: #dc3545;
            border: 1px solid #dc3545;
        }

        .btn-view:hover,
        .btn-edit:hover,
        .btn-delete:hover {
            box-shadow: 0 0 8px #00ff7f;
        }

    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <header class="navbar d-flex justify-content-center align-items-center position-relative">
        <div class="navbar-title">
            ðŸ“’ DevOps Shack NotesApp ðŸ“’
        </div>
        <div class="form-check form-switch position-absolute top-50 end-0 translate-middle-y me-4">
            <input class="form-check-input" type="checkbox" id="darkModeToggle">
        </div>
    </header>

    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <nav class="sidebar">
            <h6>Navigation</h6>
            <a class="btn text-start text-white" asp-controller="Notes" asp-action="Index">
                ðŸ“‹ All Notes <span class="badge bg-light text-dark">@ViewBag.NoteCount</span>
            </a>
            <a class="btn btn-primary text-white text-start" asp-controller="Notes" asp-action="Create">âž• New Note</a>

            <h6 class="mt-4">Connect</h6>
            <a class="btn btn-outline-light" href="https://www.youtube.com/@@devopsshack" target="_blank"><i class="fab fa-youtube"></i> YouTube</a>
            <a class="btn btn-outline-light" href="https://www.linkedin.com/in/adityajaiswal7/" target="_blank"><i class="fab fa-linkedin"></i> LinkedIn</a>
            <a class="btn btn-outline-light" href="https://www.instagram.com/devopsshack/" target="_blank"><i class="fab fa-instagram"></i> Instagram</a>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        Â© 2025 â€“ DevOps Shack
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggle = document.getElementById('darkModeToggle');
        toggle.addEventListener('change', function () {
            document.body.classList.toggle('dark-mode');
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>

